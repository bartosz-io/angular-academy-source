<footer id="footer">
  <div id="footer-subscription">
    <div id="transparent-bar"></div>
    <img id="footer-ninja" src="<%- url_for('assets') %>/ninja-jump.png" alt="ninja">
    <!-- Begin Mailchimp Signup Form -->
    <div id="mc_embed_signup">
      <form action="https://gmail.us20.list-manage.com/subscribe/post?u=3116a981a5071d60dd4762f63&amp;id=e1d22d4bc5"
        method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate subscription">
        <div id="mc_embed_signup_scroll">
          <div id="caption">Subscribe for new articles and videos!</div>
          <div class="mc-field-group">
            <input type="email" placeholder="Email Address" value="" name="EMAIL" class="required" id="mce-EMAIL"
              required>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text"
              name="b_3116a981a5071d60dd4762f63_e1d22d4bc5" tabindex="-1" value=""></div>
          <div class="clear"><input type="submit" value="I want new articles" name="subscribe" id="mc-embedded-subscribe"
              class="button cta-blue"></div>
          <div class="consent">
            By clicking the button you agree to receive email newsletter. NO SPAM!
          </div>
        </div>
      </form>
    </div>
    <!--End mc_embed_signup-->
  </div>
  <% if (theme.sidebar === 'bottom'){ %>
  <%- partial('_partial/sidebar') %>
  <% } %>
  <div id="footer-info" <% if (is_post()) {  %> class="post-footer" <% } %>>
    <span>&copy;
      <%= date(new Date(), 'YYYY') %>
      <%= config.title %></span>
    <a href="<%- url_for('terms') %>">Terms and Conditions</a>
    <a href="<%- url_for('privacy') %>">Privacy Policy</a>
  </div>
</footer>