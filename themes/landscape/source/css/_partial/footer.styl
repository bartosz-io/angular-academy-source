#footer
  background: color-primary
  color: color-grey

  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

  form
    padding: 75px 20px 0 0
    color: white

  @media mq-normal
    margin-left: sidebar-width

    .home &
      margin-left: 0

#footer-ninja
  width: 50%
  object-fit: contain
  z-index: 1000

  @media mq-mobile
    margin-top: 25px

#footer-info
  padding: 20px
  background-color: color-background-dark
  text-align: center
  line-height: line-height
  font-size: 0.85em

  @media mq-mobile-and-tablet
    text-align: center
    padding: 20px 0

    &.post-footer
      height: 60px

  span
    margin-left: 5px

#footer-subscription
  margin: auto
  max-width: 800px
  background-color: color-primary
  display: flex

#transparent-bar
  height: 50px
  width: 100%
  left: 0
  position: absolute
  background-color: color-background-light

  @media mq-not-large
    background-color: color-background-dark

#footer-fixed-button
  display: none
  position: fixed
  bottom: 0
  text-align: center
  width: 100%
  height: 40px
  line-height: 40px
  cursor: pointer
  color: white
  background: color-primary

  @media mq-mobile-and-tablet
    &.show
      display: block