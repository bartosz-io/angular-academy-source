.subscription
  input
    border: none
    outline: none
    padding: 10px
    border-radius: 4px
    width: 100%
    box-sizing: border-box
    margin-bottom: 10px
  
  button.cta-blue
    background-color: color-secondary
    padding: 8px 10px
    font-size: 16px
    font-weight: bold
    border: none
    border-radius: 4px
    width: 100%
    margin-bottom: 5px
    cursor: pointer
    text-transform: uppercase
    color: white

    &:hover
      background-color: color-secondary-hover

  .consent
    text-align: center
    font-size: 11px
    opacity: 0.8
    margin-top: 2px
    margin-bottom: 20px

  #caption
    text-align: center
    margin-bottom: 10px