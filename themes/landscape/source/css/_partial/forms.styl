.subscription
  input
    border: none
    outline: none
    padding: 10px
    border-radius: 4px
    width: 100%
    box-sizing: border-box
    margin-bottom: 10px
  
  .cta
    padding: 8px 10px
    font-size: 16px
    font-weight: bold
    border: none
    border-radius: 4px
    width: 100%
    margin-bottom: 5px
    cursor: pointer
    color: white

    &-blue
      background-color: color-secondary

    &-red
      background-color: color-primary

    &:hover
      color: rgba(1, 1, 1, 0.6)

  .consent
    text-align: center
    font-size: 11px
    opacity: 0.8
    margin-top: 2px
    margin-bottom: 20px

  #caption
    text-align: center
    margin-bottom: 10px