.share
    margin-right: 20px
    height: 100%
    width: 100px
    text-align: center
    position: sticky
    top: 200px
    display: flex
    flex-direction: column
    z-index: 1000

    .text
        width: 50px

    .comment-count
        color: color-default
        text-decoration: none

    @media mq-mobile-and-tablet
        position: fixed
        bottom: 0
        top: unset
        height: 40px
        width: 100%
        flex-direction: row
        margin: 0

        a
            display: flex
            flex-direction: column
            justify-content: center

            &.twitter
                background-color: #1da1f2
                
            &.facebook
                background-color: #66679d
                
            &.bubble
                background-color: color-primary

        .text, .comment-count
            display: none
    
    img
        width: 40px
        height: 40px
        cursor: pointer
        margin-top: 20px

    .icon
        margin-top: 20px
        display: inline-block
        width: 2em
        height: 2em
        stroke-width: 0

        &-twitter
            fill: #1da1f2
            
            &:hover
                fill: #1a7aa3

        &-facebook
            fill: #66679d
            
            &:hover
                fill: #51527f

        &-bubble
            fill: color-primary
            
            &:hover
                fill: color-primary-dark

        @media mq-mobile-and-tablet
            margin-top: 0
            width: 100%
            height: 1.5em
            fill: white

            &:hover
                fill: white