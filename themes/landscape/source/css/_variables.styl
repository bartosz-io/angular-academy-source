// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-background-dark = #212121
color-header = color-background-dark
color-sidebar = color-background-dark
color-primary = #FF0062
color-primary-dark = #D60153
color-widget = #181818
color-footer = color-background-dark
color-secondary = #44DAFF

color-default = #212121
color-grey = #999
color-border = #979797
color-link = color-primary-dark
color-background-light = white
color-sidebar-text = #777
color-footer-background = #262a30
color-mobile-nav-background = #191919
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-roboto = 'Roboto', sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 16px
line-height = 1.6em
line-height-title = 1.1em

// Header
logo-size = 22px
subtitle-size = 16px
header-height = 80px
sidebar-width = 280px
sidebar = hexo-config("sidebar")

// Layout
block-margin = 80px
article-padding = 20px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-mobile-and-tablet = "screen and (max-width: 767px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
mq-not-large = "screen and (max-width: 1023px)"
mq-large = "screen and (min-width: 1024px)"